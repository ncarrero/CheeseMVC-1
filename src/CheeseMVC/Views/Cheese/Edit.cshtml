@model CheeseMVC.ViewModels.AddEditCheeseViewModel

<h1>Edit Cheese @Model.Name (id=@Model.ID)</h1>

<form method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" id="@Model.Name" value="@Model.Name" type="text" />
        <input type="hidden" value="@Model.ID" name="id" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" name="description" id="@Model.Description" value="@Model.Description" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.CheeseTypes"></select>
    </div>
    <input type="submit" value="Edit Cheese" />

</form>
