<!--declare when you want to use a view model using "at model" syntax rather than using viewbag-->
@model List<CheeseMVC.Models.Cheese>
<!--can also use the following code instead of the one above:
    "at using" CheeseMVC.Models
    "at model" List<Cheese>-->

<h1>@ViewBag.Title</h1>

<!--replace ViewBag.Cheeses with Model-->
<!--refers to the view model: refers to thing of type that is passed into the view-->
@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
    </tr>

    <!--use var instead of class Cheese because Razor compiler doesn't understand Cheese-->
    <!--replace ViewBag.cheeses with Model to get out of he model rather than the ViewBag-->
    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Type</td>
            <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseID="@cheese.CheeseId">Edit</a></td>
        </tr>
    }
</table>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
